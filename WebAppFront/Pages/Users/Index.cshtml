@page
@model IndexModel
@{
    ViewData["Title"] = "User List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="EditUserRoles" asp-route-id="@user.Id" class="btn btn-primary">Rediger Rolle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register New User</a>
</li>
