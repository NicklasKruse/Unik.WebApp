@page
@model IndexModel
@{
    ViewData["Title"] = "User List";
}

<h2>@ViewData["Title"]</h2>

<form method="get">
    <div class="form-group">
        <label for="selectedRole">Sort by Role:</label>
        <select name="SelectedRole" id="selectedRole" class="form-control">
            <option value="">All</option>
            <option value="Formand">Formand</option>
            <option value="Bestyrelse">Bestyrelse</option>
            <option value="Medlem">Medlem</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="EditUserRoles" asp-route-id="@user.Id" class="btn btn-primary">Edit Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register New User</a>
</li>
