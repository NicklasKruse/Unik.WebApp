@page
@model CreateModel
@{
    ViewData["Title"] = "Create Item";
}

<h2>Create Item</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CreateItemVM.Description"></label>
        <input asp-for="CreateItemVM.Description" class="form-control" />
        <span asp-validation-for="CreateItemVM.Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>